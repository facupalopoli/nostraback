<!-- BORRAR ESTE LINKEO DESPUES DE ESTILAR -->
<head>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<!-- ------------ -->

<%- include('../../views/admin/navbaradmin.ejs')%>

<h2>EDIT</h2>

<div class="col-9">
    <div class="container p-3 w-100">
        <%- include('../partials/messages') -%>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Producto</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </tfoot>
            <tbody>

                <% productos.forEach((producto)=> { %>
                    <tr>
                        <td><%= producto.titulo %></td>
                        <td><%= producto.stock %></td>
                        <td>$ <%= producto.precio %></td>
                        <td>
                            <a class="btn btn-primary" href="/admin/edit/<%= producto._id %>">Editar</a>
                            <form style="display: inline;" action="/delete/user/<%= producto._id %>?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Eliminar</button>
                            </form>
                        </td>
                    </tr>

                <% }) %>
                
            </tbody>
        </table>
    </div>
</div>
</div>


