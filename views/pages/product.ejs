<%- include('../../views/partials/products/headProducts.ejs')%>


<%- include('../../views/partials/products/headerProducts.ejs')%>

<section class="Product1 d-flex my-2"><!--cambiar a espaniol y ponerlo generico-->
    <div class="ubicacion d-flex col-lg-9 col-md-10 col-10" id="ubicacionDonde">Buscar producto <i class="bi bi-chevron-right"></i> Genero <i class="bi bi-chevron-right"></i><span>Ropa</span> 
    </div>
</section>

<section class="Product d-flex my-2 pt-4" id="hero">
            
    <div class="mainHero position-sticky mt-10 col-lg-10 col-md-11 col-11">
        <div class="col-lg-6 col-md-12 col-12" id="contenedorFotos">
            <!-- Swiper -->

        <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
            <div class="swiper-wrapper">
                <% producto.url_imagen.forEach(producto=>{ %>
            <div class="swiper-slide">
                
                
                    <img src="<%= producto %>" alt=""  height="10px" class="small-img">
            </div>
                <% }) %>
                
                
            
            
            
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        </div>
        <div thumbsSlider="" class="swiper mySwiper">
            <div class="swiper-wrapper">
                <% producto.url_imagen.forEach(producto=>{ %>
            <div class="swiper-slide" id="divSwiperChico">
                <img src="<%= producto %>" width="100%" class="small-img" alt="">
            </div>
                <% }) %>
            
            </div>
        </div>

    </div>
    

    <div class=" mitadHero col-lg-6 col-md-12 col-12">
        <h2 class="weight"><%= producto.titulo %></h2>
        <div class="container-estrellas" id="rating">
            <i class="bi bi-star-fill checked"></i>
            <i class="bi bi-star-fill checked"></i>
            <i class="bi bi-star-fill checked"></i>
            <i class="bi bi-star-fill checked"></i>
            <i class="bi bi-star-half checked"></i>
            <p>(4.9)</p>
            
        </div>
        <h3 class="weight">$<%= producto.precio %></h3>
        <div class="line pt-4" id="lineaPrecio"></div>
        <div class="size">
            <h4>Talles disponibles</h4>
            <div class="size-buttons">
                <button class="size-btn selected" onclick="selectSize(this)">S</button>
                <button class="size-btn" onclick="selectSize(this)">M</button>
                <button class="size-btn" onclick="selectSize(this)">L</button>
            </div>
              
              
        </div>
        <div class="line"></div>
        <div class="addToCart">
            <div class="d-flex">
                <div class="counter">
                    <button class="minus-btn">-</button>
                    <div class="counter-value">1</div>
                    <button class="plus-btn">+</button>
                </div> 
                <form class="addToCartForm" action="/products/agregar-carro/<%= producto.id %>" method="POST">
                    <button type="submit" class="buy-btn">Agregar al carrito</button>
                </form>
            </div>
        </div>

    </div>
</div>
</section>




<section class="losDetalles">
    <div class="col-lg-10 col-md-11 col-11 pt-5">
        <h4 class="tituloDetalles">Detalles</h4>
        <div class="line2" id="lineaDetalles"></div>
        <p class="pt-3"><%= producto.descripcion %></p>
        
    </div>
</section>


<section class="productosRelacionados my-5 pb-5">
            
    <div class="titleProducts col-lg-10 col-11">
        <h2>Productos Relacionados</h2>    
        <div class="botonesHero">
            <button class="scroll-btn prev-btn"><i class="bi bi-chevron-left"></i></button>
            <button class="scroll-btn next-btn"><i class="bi bi-chevron-right"></i></button>
        </div>
    </div>
    <div class="card-container-wrapper col-lg-10 col-md-11 col-11">
        <div class="divProducts">
            <% productosRelacionados.forEach(producto=>{ %>
            <div class="cardProduct">
                <a href="/products/<%= producto.id %>"><img src="<%= producto.url_imagen[0] %>" alt="imagen del producto"></a>
                <div class="cardFooter">
                    <div>
                        <h3><%= producto.titulo %></h3>
                        <h3 class="price">$ <%= producto.precio %></h3>    
                    </div>  
                    <form class="addToCartForm" action="/products/agregar-carro/<%= producto._id %>" method="POST">
                        <button type="submit" class="bi bi-cart-plus"></button>
                    </form>
                </div>
            </div>
            <!--test_1_div-->
            
            <% }) %>
            
            

        </div>

</div>

</section>









