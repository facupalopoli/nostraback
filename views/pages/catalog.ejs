<%- include('../../views/partials/head.ejs')%>

<%- include('../../views/partials/header.ejs')%>

<h2>Categoria</h2>
<ul>
    <li><input type="checkbox" id="categoria-mujer"> Mujer</li>
    <li><input type="checkbox" id="categoria-hombre"> Hombre</li>
    <li><input type="checkbox" id="categoria-niños"> Niños</li>
    <li><input type="checkbox" id="categoria-sport"> Sport</li>
    <li><input type="checkbox" id="categoria-casual"> Casual</li>
</ul>
<h2>Marca</h2>
<ul>
    <li><input type="checkbox" id="marca-adidas"> Adidas</li>
    <li><input type="checkbox" id="marca-gucci"> Gucci</li>
    <li><input type="checkbox" id="marca-d&g"> D&G</li>
    <li><input type="checkbox" id="marca-puma"> Puma</li>
    <li><input type="checkbox" id="marca-topper"> Topper</li>
</ul>
<h2>Precio</h2>
<ul>
    <li><input type="checkbox" id="precio-0-500"> $0-$500</li>
    <li><input type="checkbox" id="precio-500-1000"> $500-$1000</li>
    <li><input type="checkbox" id="precio-1000-5000"> $1000-$5000</li>
    <li><input type="checkbox" id="precio-5000-10000"> $5000-$10000</li>
    <li><input type="checkbox" id="precio-10000-mas"> más de $10000</li>
</ul>
<h2>Talle</h2>
<ul>
    <li><input type="checkbox" id="talle-s"> S</li>
    <li><input type="checkbox" id="talle-m"> M</li>
    <li><input type="checkbox" id="talle-l"> L</li>
</ul>

<section class="products">
    <div class="divProducts">
        <% productos.forEach(producto=>{ %>
            <div class="cardProduct">
                <a href="/products/<%= producto._id %>"><img src="<%= producto.url_imagen[0] %>" alt="imagen del producto"></a>
                <div class="cardFooter">
                    <div>
                        <h3><%= producto.titulo %></h3>
                        <h3 class="price">$ <%= producto.precio %></h3>    
                    </div>
                    <form class="addToCartForm" action="/products/agregar-carro/<%= producto._id %>" method="POST">
                        <button type="submit" class="bi bi-cart-plus"></button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<script>
    window.productos = <%- JSON.stringify(productos) %>
</script>

<script src="/js/catalog.js" type="module"></script>

